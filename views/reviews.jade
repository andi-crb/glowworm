extends ./layout
block content
    #main
        h2.
             #{title}
        table
            tr
                th.
                    Title
                th.
                    Author
                th.
                    Reviewer
                th.
                    Status
                th. 
                    Review
                th.
                    Rating
                th.
                    Date Read

                th.
            - each review, i in reviews
                tr
                    td
                        =review.title
                    td
                        =review.author
                    td
                        a(href='/profile/#{review.idusers}') #{review.displayname}
                    td
                        = review.status
                    td
                        = review.review
                    td
                        #ratings
                            if (review.rating == 5)
                                &#9733;&#9733;&#9733;&#9733;&#9733;
                            if (review.rating == 4)
                                &#9733;&#9733;&#9733;&#9733;&#9734;
                            if (review.rating == 3)
                                &#9733;&#9733;&#9733;&#9734;&#9734;
                            if (review.rating == 2)
                                &#9733;&#9733;&#9734;&#9734;&#9734;
                            if (review.rating == 1)
                                &#9733;&#9734;&#9734;&#9734;&#9734;
                    td
                        = review.dateread
                    td
                        a(href='/stories/#{review.idstories}##{review.idreviews}') Show